<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.Collection.ViewReceiptsFragment">

    <Button
            android:text="date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_vr_receiptdate"
            android:textSize="@dimen/sp14_space"
            android:elevation="@dimen/sp4_space"
            android:drawableLeft="@drawable/ic_date_range_white"
            android:drawablePadding="@dimen/sp4_space"
            android:background="@drawable/button_background"
            android:focusable="false"
            android:clickable="false"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edt_vr_search"
            app:layout_constraintBottom_toBottomOf="@+id/edt_vr_search"/>
    <LinearLayout
            android:id="@+id/tabs_button_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/sp16_space"
            app:layout_constraintTop_toBottomOf="@+id/edt_vr_search">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <Button
                    android:id="@+id/btn_onlinerecpts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="0dp"
                    android:text="@string/online_recepit"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>
            <View
                    android:id="@+id/view_online_recpts"
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:visibility="invisible"
                  android:background="@color/colorWhite"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <Button
                    android:id="@+id/btn_off_recpts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="0dp"
                    android:text="@string/off_recepts"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_400"
                    android:textSize="14sp"/>
            <View
                    android:id="@+id/view_off_recpts"
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:visibility="invisible"
                    android:background="@color/colorWhite"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <Button
                    android:id="@+id/btn_feedbacks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="0dp"
                    android:text="@string/feedback"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_400"
                    android:textSize="14sp"/>
            <View
                    android:id="@+id/view_feedbacks"
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:visibility="invisible"
                    android:background="@color/colorWhite"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_grey"
            android:gravity="center"
            android:weightSum="3.4"
            android:padding="@dimen/sp8_space"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/table_header"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/tabs_button_layout">

        <TextView
                android:id="@+id/txt_col1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/customer_name"
                android:textAlignment="viewStart"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp"/>
        <View android:layout_width="0sp" android:layout_height="match_parent"
              android:layout_weight="0.2"/>
        <TextView
                android:id="@+id/txt_col2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textAlignment="textStart"
                android:text="@string/paymenttype"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp"/>
        <View android:layout_width="0sp"
              android:layout_height="match_parent"
              android:layout_weight="0.2"/>
        <TextView
                android:id="@+id/txt_col3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textAlignment="textStart"
                android:text="@string/received"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp"/>


    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_receips"
            android:layout_width="0dp"
            android:layout_height="0sp"
            android:background="@color/grey_200"
            app:layout_constraintTop_toBottomOf="@+id/table_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_offreceips"
            android:layout_width="0dp"
            android:layout_height="0sp"
            android:background="@color/grey_200"
            app:layout_constraintTop_toBottomOf="@+id/table_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/box_white_sharp"
            android:drawableLeft="@drawable/ic_search_black"
            android:gravity="center"
            android:hint="@string/searchere"
            android:maxWidth="200dp"
            android:minHeight="20sp"
            android:textSize="14sp"
            android:singleLine="true"
            android:id="@+id/edt_vr_search"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:weightSum="3.4"
            android:padding="@dimen/sp8_space"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout4">

        <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"/>
        <View android:layout_width="0sp" android:layout_height="match_parent"
              android:layout_weight="0.2"/>
        <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textAlignment="textStart"
                android:text="@string/total"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"/>
        <View android:layout_width="0sp"
              android:layout_height="match_parent"
              android:layout_weight="0.2"/>
        <TextView
                android:id="@+id/txt_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textAlignment="textStart"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="16sp"/>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>