<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:tag="listitem"
                android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/sp8_space"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:weightSum="3.6"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/sp4_space"
                android:id="@+id/linearLayout5">
            <TextView
                    android:text="TextView"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_folowupdate"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textColor="@color/grey_700"/>
            <View android:layout_width="0sp" android:layout_height="match_parent"
                  android:layout_weight="0.3"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_followupstatus"
                    android:layout_weight="1"
                    android:textColor="@color/grey_700"/>
            <View android:layout_width="0sp" android:layout_height="match_parent"
                  android:layout_weight="0.3"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_remarks"
                    android:layout_weight="1"
                    android:textColor="@color/grey_700"/>
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>


</RelativeLayout>