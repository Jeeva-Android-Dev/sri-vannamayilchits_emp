                    android:layout_height="5dp"
                    android:layerType="software"
                    android:src="@drawable/dashedline"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Group  :"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/txt_rp_grpno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / /"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket No :"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/txt_rp_tktno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / /"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due :"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/txt_rp_dueno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / /"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Amount Due : "
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/txt_rp_totaamntdue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15,845"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Penalty : "
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/txt_rp_penaulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1545"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bonus : "
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/txt_rp_bonus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal" tools:visibility="gone">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discount : "
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/txt_rp_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Received Amount : "
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/txt_rp_receivedamnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Mode : "
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/txt_rp_paymentmode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cheque"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grey_600"
                        android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/chequelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cheque Bank : "
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp"/>

                    <TextView
                            android:id="@+id/txt_rp_chequebank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cheque"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cheque No. : "
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp"/>

                    <TextView
                            android:id="@+id/txt_rp_chequeno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cheque"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cheque bank Branch : "
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp"/>

                    <TextView
                            android:id="@+id/txt_rp_chequebranch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="branch"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cheque Date : "
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp"/>

                    <TextView
                            android:id="@+id/txt_rp_chequebdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="branch"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ddlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="D.D Bank : "
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp"/>

                    <TextView
                            android:id="@+id/txt_rp_ddbank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="D.D No. : "
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp"/>

                    <TextView
                            android:id="@+id/txt_rp_ddno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="D.D bank Branch : "
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp"/>

                    <TextView
                            android:id="@+id/txt_rp_ddbranch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="branch"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
