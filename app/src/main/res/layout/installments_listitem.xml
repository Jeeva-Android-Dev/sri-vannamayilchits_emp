<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:tag="listitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"

            android:id="@+id/layu"
            app:layout_constraintEnd_toEndOf="parent">
        <View android:layout_width="1sp" android:layout_height="match_parent"
              android:background="@color/grey_400"/>
        <TextView
                android:id="@+id/txt_auctionno"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="a.NO"
                android:gravity="center"
                android:layout_marginTop="@dimen/sp8_space"
                android:layout_marginBottom="@dimen/sp8_space"
                android:textAlignment="center"
                android:layout_weight="1"/>
        <View android:layout_width="1sp" android:layout_height="match_parent"
              android:background="@color/grey_400"/>
        <TextView
                android:id="@+id/txt_pending"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="Pending"
                android:layout_marginTop="@dimen/sp8_space"
                android:layout_marginBottom="@dimen/sp8_space"
                android:gravity="center"
                android:textSize="@dimen/sp16_space"
                android:textAlignment="center"
                android:layout_weight="1"/>

        <View android:layout_width="0sp" android:layout_height="match_parent"
              android:layout_weight="0.2"/>
        <View android:layout_width="1sp" android:layout_height="match_parent"
              android:background="@color/grey_400"/>
        <EditText
                android:id="@+id/txt_penalty"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="penalty"
                android:gravity="center"
                android:layout_marginTop="@dimen/sp8_space"
                android:layout_marginBottom="@dimen/sp8_space"
                android:textSize="@dimen/sp16_space"
                android:editable="false"
                android:focusable="false"
                android:tag="penalty_text"
                android:inputType="number"
                android:textAlignment="center"
                android:background="@drawable/installmentbox"
                android:layout_margin="@dimen/sp4_space"
                android:layout_weight="1"/>

        <View android:layout_width="0sp" android:layout_height="match_parent"
              android:layout_weight="0.2"/>
        <View android:layout_width="1sp" android:layout_height="match_parent"
              android:background="@color/grey_400"/>
        <TextView
                android:id="@+id/txt_bonus"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="bonus"
                android:gravity="center"
                android:layout_marginTop="@dimen/sp8_space"
                android:layout_marginBottom="@dimen/sp8_space"
                android:textSize="@dimen/sp16_space"
                android:textAlignment="center"
                android:layout_weight="1"/>

        <View android:layout_width="0sp" android:layout_height="match_parent"
              android:layout_weight="0.2"/>
        <View android:layout_width="1sp" android:layout_height="match_parent"
              android:background="@color/grey_400"/>
        <TextView
                android:id="@+id/txt_total"
                android:layout_width="0sp"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="@dimen/sp16_space"
                android:layout_height="match_parent"
                android:text="total "
                android:layout_marginTop="@dimen/sp8_space"
                android:layout_marginBottom="@dimen/sp8_space"
                android:layout_weight="1"/>
        <View android:layout_width="1sp" android:layout_height="match_parent"
              android:background="@color/grey_400"/>
    </LinearLayout>
    <View android:layout_width="0sp"
          android:layout_height="1sp"
          android:background="@color/grey_400"
          app:layout_constraintTop_toBottomOf="@+id/layu"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>