<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="Customer Name "
                android:textColor="@color/colorBlack" />

            <EditText

                android:id="@+id/cus_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="Gender "
                android:textColor="@color/colorBlack" />


            <RadioGroup
                android:id="@+id/firstRg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:contentDescription="Layouts"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:checked="true"
                    android:text="Male"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/female"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Female"
                    android:textSize="18sp" />


            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="Employee Branch"
                android:textColor="@color/colorBlack" />


            <Button
                android:id="@+id/emp_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/sp4_space"
                android:layout_marginRight="20dp"
                android:background="@drawable/box_stroke"
                android:editable="false"
                android:gravity="center_vertical"
                android:hint="@string/str_selectbranch"
                android:minHeight="@dimen/spinner_minheight"
                android:textAlignment="gravity"

                android:textColor="@color/colorBlack"
                android:textSize="@dimen/regular_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="Customer preferred Branch"
                android:textColor="@color/colorBlack" />


            <Button
                android:id="@+id/branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/sp4_space"
                android:layout_marginRight="20dp"
                android:background="@drawable/box_stroke"
                android:drawableRight="@drawable/ic_spindown_black"
                android:editable="false"
                android:gravity="center_vertical"
                android:hint="@string/str_selectbranch"
                android:minHeight="@dimen/spinner_minheight"
                android:textAlignment="gravity"

                android:textColor="@color/colorBlack"
                android:textSize="@dimen/regular_text_size" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="Mobile Number "
                android:textColor="@color/colorBlack" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                android:maxLength="10" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="Email ID "
                android:textColor="@color/colorBlack" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="Date of Birth"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/date_of_birth"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:editable="false"
                android:gravity="bottom"


                android:textColor="#000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@color/grey_a900" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="Date of Joining"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/date_of_joning"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:editable="false"
                android:focusable="false"
                android:gravity="bottom"

                android:textColor="#000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@color/grey_a900" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="Address"
                android:textColor="@color/colorBlack" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="Select Schemes"
                android:textColor="@color/colorBlack" />

            <Spinner
                android:id="@+id/schemes_spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/sp4_space"
                android:layout_marginRight="20dp"
                android:background="@drawable/box_stroke"
                android:drawableRight="@drawable/ic_spindown_black"
                android:editable="false"
                android:gravity="center_vertical"
                android:hint="Select State"
                android:minHeight="@dimen/spinner_minheight"
                android:textAlignment="gravity"

                android:textColor="@color/colorBlack"
                android:textSize="@dimen/regular_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="Select Payment Mode"
                android:textColor="@color/colorBlack" />

            <Button
                android:id="@+id/edt_paymenttype"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/sp4_space"

                android:layout_marginRight="20dp"
                android:background="@drawable/fingerprintbox"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="Business Agent Name"
                android:textColor="@color/colorBlack" />

            <Spinner
                android:id="@+id/agent_spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/sp4_space"
                android:layout_marginRight="20dp"
                android:background="@drawable/box_stroke"
                android:drawableRight="@drawable/ic_spindown_black"
                android:editable="false"
                android:hint="Select Agent"
                android:minHeight="@dimen/spinner_minheight"
                android:textAlignment="gravity"
                android:textColor="@color/colorBlack" />

            <Button
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/sp4_space"
                android:layout_marginRight="20dp"
                android:background="@drawable/box_stroke"
                android:drawableRight="@drawable/ic_spindown_black"
                android:editable="false"
                android:gravity="center_vertical"
                android:hint="Select State"
                android:minHeight="@dimen/spinner_minheight"
                android:textAlignment="gravity"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/regular_text_size"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="Select State"
                android:textColor="@color/colorBlack" />

            <Spinner
                android:id="@+id/state_spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/sp4_space"
                android:layout_marginRight="20dp"
                android:background="@drawable/box_stroke"
                android:drawableRight="@drawable/ic_spindown_black"
                android:editable="false"
                android:gravity="center_vertical"
                android:hint="Select State"
                android:minHeight="@dimen/spinner_minheight"
                android:textAlignment="gravity"

                android:textColor="@color/colorBlack"
                android:textSize="@dimen/regular_text_size" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="District"
                android:textColor="@color/colorBlack" />

            <Button
                android:id="@+id/district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/sp4_space"
                android:layout_marginRight="20dp"
                android:background="@drawable/box_stroke"
                android:drawableRight="@drawable/ic_spindown_black"
                android:editable="false"
                android:gravity="center_vertical"
                android:hint="Select District"
                android:minHeight="@dimen/spinner_minheight"
                android:textAlignment="gravity"
                android:textColor="@color/colorBlack"

                android:textSize="@dimen/regular_text_size"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/district_spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/sp4_space"
                android:layout_marginRight="20dp"
                android:background="@drawable/box_stroke"
                android:drawableRight="@drawable/ic_spindown_black"
                android:editable="false"
                android:gravity="center_vertical"
                android:hint="Select State"
                android:minHeight="@dimen/spinner_minheight"
                android:textAlignment="gravity"

                android:textColor="@color/colorBlack"
                android:textSize="@dimen/regular_text_size" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="City"
                android:textColor="@color/colorBlack" />

            <Button
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/sp4_space"
                android:layout_marginRight="20dp"
                android:background="@drawable/box_stroke"
                android:drawableRight="@drawable/ic_spindown_black"
                android:editable="false"
                android:gravity="center_vertical"
                android:hint="@string/str_selectbranch"
                android:minHeight="@dimen/spinner_minheight"
                android:textAlignment="gravity"
                android:textColor="@color/colorBlack"

                android:textSize="@dimen/regular_text_size"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/city_spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/sp4_space"
                android:layout_marginRight="20dp"
                android:background="@drawable/box_stroke"
                android:drawableRight="@drawable/ic_spindown_black"
                android:editable="false"
                android:gravity="center_vertical"
                android:hint="Select State"
                android:minHeight="@dimen/spinner_minheight"
                android:textAlignment="gravity"

                android:textColor="@color/colorBlack"
                android:textSize="@dimen/regular_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10ssp"
                android:inputType="number"
                android:text="Pincode"
                android:textColor="@color/colorBlack" />

            <EditText
                android:id="@+id/pincode"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                android:maxLength="6" />


            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Add Customer"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold"

                />


        </LinearLayout>
    </ScrollView>

</LinearLayout>