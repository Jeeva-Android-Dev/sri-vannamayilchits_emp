<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Fragments.Settings.Settings">


    <View
            android:layout_width="0dp"
            android:layout_height="1sp"
            android:id="@+id/view11"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/grey_400"
            app:layout_constraintTop_toBottomOf="@+id/edt_as_device"
            app:layout_constraintStart_toStartOf="@+id/edt_as_device" android:layout_marginTop="8dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="52dp"
            app:srcCompat="@drawable/ic_account_circle"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pbaar_sa_setup"/>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/user_name"
              app:layout_constraintTop_toBottomOf="@+id/profile_image"
              android:id="@+id/textView7"
              android:layout_marginTop="24dp" app:layout_constraintStart_toEndOf="@+id/imageView9"
              android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/edt_as_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/colorBlack"
            android:hint="@string/user_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/imageView9" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:id="@+id/edt_as_device"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:hint="@string/deviec_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/textView8"/>

    <ProgressBar
            android:id="@+id/pbaar_sa_setup"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
            android:text="@string/deviec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/view10"
            android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/imageView10"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/change_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_changepassword"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:drawableRight="@drawable/ic_create" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/view11" android:layout_marginTop="24dp"/>
    <View
            android:layout_width="0dp"
            android:layout_height="1sp"
            android:id="@+id/view10"
            app:layout_constraintTop_toBottomOf="@+id/edt_as_name"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            android:background="@color/grey_400" app:layout_constraintStart_toStartOf="@+id/edt_as_name"
    />
    <ImageView
            app:srcCompat="@drawable/ic_username_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/edt_as_name"/>
    <ImageView
            app:srcCompat="@drawable/ic_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/edt_as_device" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView8"/>
    <ImageView
            app:srcCompat="@drawable/ic_password_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_changepassword" app:layout_constraintTop_toTopOf="@+id/txt_changepassword"/>

</android.support.constraint.ConstraintLayout>