<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.Collection.Collections">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/cashinhand_box"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/relativeLayout">

        <LinearLayout
                android:id="@+id/firstlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/sp4_space"
                android:orientation="horizontal"
                android:padding="4dp">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/collected"
                        android:textColor="@color/grey_600"/>

                <TextView
                        android:id="@+id/txt_cl_collected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_700"
                        android:textStyle="bold"/>

            </LinearLayout>

            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tobecollected"
                        android:textColor="@color/grey_600"/>

                <TextView
                        android:id="@+id/txt_cl_tobecollected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_700"
                        android:textStyle="bold"/>

            </LinearLayout>

            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_totalsubscribers"
                        android:textColor="@color/grey_600"/>

                <TextView
                        android:id="@+id/txt_cl_totalcustomers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_700"
                        android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/secondlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstlayout"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:orientation="horizontal"
                android:padding="4dp">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_cashinhand"
                        android:textColor="@color/grey_600"/>

                <TextView
                        android:id="@+id/txt_cl_cashinhand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_700"
                        android:textStyle="bold"/>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

               <Button
                       android:id="@+id/btn_col_viewreceipts"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/sp14_space"
                       android:padding="@dimen/sp4_space"
                       android:textColor="@color/colorWhite"
                       android:background="@drawable/button_background"
                       android:text="@string/view_gen_recpts"

               />

            </LinearLayout>

            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/btn_col_settlement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp14_space"
                        android:textColor="@color/colorWhite"
                        android:padding="@dimen/sp4_space"
                        android:background="@drawable/button_background"
                        android:text="@string/settle_amount"

                />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <EditText
            android:id="@+id/edt_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/box_white_sharp"
            android:drawableLeft="@drawable/ic_search_black"
            android:gravity="center"
            android:hint="@string/searchere"
            android:maxWidth="200dp"
            android:minHeight="20sp"
            android:textSize="14sp"
            android:singleLine="true"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:minHeight="40dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginTop="@dimen/sp8_space"
            app:layout_constraintTop_toBottomOf="@+id/edt_search"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/table_header">

        <TextView
                android:id="@+id/txt_rf_auction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/customer_name"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp14_space"/>

        <View android:layout_width="0sp" android:layout_height="match_parent"
              android:layout_weight="0.2"/>

        <TextView
                android:id="@+id/txt_rf_pendind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="start"
                android:textAlignment="textStart"
                android:text="@string/collected"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp14_space"/>
        <View android:layout_width="0sp" android:layout_height="match_parent"
              android:layout_weight="0.2"/>
        <TextView
                android:id="@+id/txt_rf_penalty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="start"
                android:textAlignment="textStart"
                android:text="@string/tobecollected"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp14_space"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/collection_recyclerview"
            android:layout_width="0sp"
            android:layout_height="0sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/table_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:id="@+id/imagerror"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_no_data_found"
            app:layout_constraintTop_toTopOf="@+id/table_header"/>
</android.support.constraint.ConstraintLayout>